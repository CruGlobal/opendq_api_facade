<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="Oaf">
        <jta-data-source>java:/jdbc/oaf_credentials</jta-data-source>
        <properties>
            <property name="jadira.usertype.databaseZone" value="America/New_York" />
            <property name="jadira.usertype.javaZone" value="America/New_York" />
        </properties>
    </persistence-unit>
</persistence>